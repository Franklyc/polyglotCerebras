{
  "manifest_version": 3,
  "name": "Cerebras Translator",
  "version": "1.0",
  "description": "A beautiful Chinese-English translation extension powered by Cerebras AI",
  "permissions": ["storage"],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  },
  "icons": {
    "48": "images/icon-48.png",  
    "128": "images/icon-128.png"  
  },
  "background": {
    "service_worker": "background.js"
  }
}
